# =============================================================================
# Celo AI Automation Engine - Unified Environment Configuration
# =============================================================================

# =============================================================================
# AI Configuration
# =============================================================================
# Google Gemini API Key for AI decision engine
GEMINI_API_KEY=your_gemini_api_key_here

# LangSmith API Key for LLM observability and monitoring
LANGSMITH_API_KEY=your_langsmith_api_key_here

# LangSmith project name (optional)
LANGSMITH_PROJECT=celo-automation

# =============================================================================
# Blockchain Configuration
# =============================================================================
# Celo wallet private key (keep secure!)
PRIVATE_KEY=your_private_key_here

# Celo network configuration
CELO_NETWORK=alfajores
CELO_RPC_URL=https://alfajores-forno.celo-testnet.org
CELO_CHAIN_ID=44787

# =============================================================================
# Database Configuration
# =============================================================================
# SQLite database path
DATABASE_PATH=./data/automation.db

# =============================================================================
# Supabase Configuration
# =============================================================================
# Supabase project URL
SUPABASE_URL=your_supabase_url_here

# Supabase anon key
SUPABASE_ANON_KEY=your_supabase_anon_key_here

# =============================================================================
# Server Configuration
# =============================================================================
# Server port
PORT=3001

# CORS origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# =============================================================================
# Security Configuration
# =============================================================================
# Rate limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# JWT secret for authentication
JWT_SECRET=your_jwt_secret_here

# =============================================================================
# Monitoring & Logging
# =============================================================================
# Log level (debug, info, warn, error)
LOG_LEVEL=info

# Enable request logging
ENABLE_REQUEST_LOGGING=true

# =============================================================================
# Feature Flags
# =============================================================================
# Enable WebSocket connections
ENABLE_WEBSOCKET=true

# Enable real-time updates
ENABLE_REALTIME_UPDATES=true

# Enable transaction tracking
ENABLE_TRANSACTION_TRACKING=true

# Enable gas estimation
ENABLE_GAS_ESTIMATION=true

# =============================================================================
# External Services
# =============================================================================
# Etherscan API key for transaction verification
ETHERSCAN_API_KEY=your_etherscan_api_key_here

# Alchemy API key for enhanced blockchain data
ALCHEMY_API_KEY=your_alchemy_api_key_here

# =============================================================================
# Development Configuration
# =============================================================================
# Enable debug mode
DEBUG=false

# Enable hot reload
HOT_RELOAD=false

# Mock blockchain responses (for testing)
MOCK_BLOCKCHAIN=false
